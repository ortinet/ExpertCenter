@model ExpertCenter.Domain.PriceList

<h3>@Model.Name</h3>

<div style="display: flex; margin-top: 10px">
    <button class="btn btn-success" id="addBtn">+ Добавить позицию</button>
    <button class="btn btn-secondary" style="margin-left: 5px;">Назад</button>
</div>

<table cellspacing=0 class="table table-bordered table-hover table-inverse table-striped" width=100% style="margin-top: 15px;">
    <thead>
        <tr>
            <th>Название товара</th>
            <th>Код товара</th>
            @foreach (var column in Model.Columns)
            {
                <th>@column.Header</th>            
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Code</td>
                @foreach (var column in Model.Columns)
                {
                    string? val = product.Properties.FirstOrDefault(prop => prop.Key.Id == column.Id).Value;
                    if (val != null)
                    {
                        <td>@val</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

<script>
    const addBtn = document.getElementById("addBtn");

    function onAddBtnClick() {
        location.href = 'https://localhost:7058/pricelists/addproduct/' + @Model.Id;
    }

    addBtn.addEventListener("click", onAddBtnClick);
</script>