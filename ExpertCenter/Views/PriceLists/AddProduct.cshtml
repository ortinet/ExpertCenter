@model ExpertCenter.Domain.Product

<h3>Добавление товара</h3>

<hr ></hr>

<form method="post">
    <div style="margin-top: 15px">
        <h5>Название</h5>
        <input type="text" class="form-control"></input>
    </div>

    <div style="margin-top: 15px";>
        <h5>Код товара</h5>
        <input type="text" class="form-control"></input>
    </div>

    <div style="margin-top: 15px">
        <table cellspacing=0 class="table table-bordered table-inverse" width=100%>
            <tbody>
                @foreach (var prop in Model.Properties)
                {
                    <tr>
                        <td style="font-size: 18px; text-align: left; vertical-align: middle;">@prop.Key.Header</td>
                        <td>
                            @{
                                switch (prop.Key.Type.Code)
                                {
                                    case "num":
                                        <div data-mdb-input-init class="form-outline">
                                            <input type="number" id="typeNumber" class="form-control" />
                                        </div>
                                            break;
                                    case "text":
                                        <input type="text" class="form-control"></input>
                                        break;
                                    case "multitext":
                                        <textarea class="form-control" aria-label="With textarea"></textarea>
                                        break;
                                    default:
                                        <input type="text" class="form-control"></input>
                                        break;
                                    }
                                }
                        </td>
                    </tr>
                }
            </tbody>
        </table>        
    </div>

    <div class="d-flex flex-row-reverse" style="margin-top: 15px; ">
        <button class="btn btn-secondary" onclick="window.history.go(-1); return false;">Назад</button>
        <button class="btn btn-success" style="margin: 0px 5px">Сохранить</button>
    </div>
</form>